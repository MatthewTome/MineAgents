{
  "compilerOptions":
  {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": [
    "tests",
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
  ]
}